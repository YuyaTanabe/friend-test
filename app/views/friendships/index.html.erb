
<div class='friendships_index col-md-8 col-md-offset-2' style="margin-top: 100px;">
  <h2 class='friendships_index col-md-8'><span style="color: orange;"><%= current_user.user_name %></span>のフレンド一覧</h2>
  <h2 class='friendships_index col-md-4' style="float: right;">
    <div style="float: right;">
      <%= link_to '友達追加', new_friendship_path, class: "glyphicon glyphicon-user btn-lg btn-info" %>
    </div>
  </h2>
  <table class="table">
    <thead>
      <tr>
        <th>friend name</th>
        <th>friend ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @friendship.each do |friendship| %>
        <% to_user = User.find(friendship.to_user_id) %>
        <tr>
          <td><%= to_user.user_name %></td>
          <td><%= to_user.friend_id %></td>
          <td><%= link_to "Show", user_path(to_user) %></td>
          <td><%= link_to "解除",friendship_path(friendship.id), method: :delete, class:"btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


