<div class='body'>
  <div class='container'>
    <div class='row'>

      <% if notice %>
        <div class="callout success" data-closable style="color: red; margin-top: 20px;">
          <span class="fi-info"></span> <%= notice %>
        </div>
      <% end %>

      <div class='user_show'>
        <h2><span style="color: orange;"><%= @user.user_name %></span>のLocation一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>location name</th>
              <th>location ID</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @location.each do |location| %>
              <% show_user = User.find(location.user_id) %>
              <tr>
                <td><%= location.location_name %></td>
                <td><%= location.id %></td>
                <td><%= link_to "Show", location_path(location.id) %></td>
                <td><%= link_to "解除", location_path(location.id), method: :delete, class:"btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>