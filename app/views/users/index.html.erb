<div class='body'>
    <div class='container'>

<div class='row'>

    <div class=''>
        <h2>Users</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>user name</th>
                    <th>friend ID</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= user.user_name %></td>
                        <td><%= user.friend_id %></td>
                        <td><%= link_to "Show", user_path(user.id), class:"user_#{user.id}" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

    </div>
</div>