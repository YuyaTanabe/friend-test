<div class='body'>
  <div class='container'>
    <div class='row'>

      <div class='user_index'>
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>user name</th>
              <th>friend ID</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.user_name %></td>
                <td><%= user.friend_id %></td>
                <td><%= link_to "Show", user_path(user.id), class:"user_#{user.id}" %></td>
                <td><%= link_to "アカウント削除",user_path(user.id), method: :delete, class:"btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>